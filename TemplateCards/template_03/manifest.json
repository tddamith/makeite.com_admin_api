{
  "meta": {
    "templateId": "wedding-invite-v1",
    "version": 1
  },

  "theme": {
    "vars": {
      "bg": "#f7e9e2",
      "card": "#fff9f5",
      "ink": "#3b2a24",
      "muted": "#7a5a4a",
      "primary": "#8b4e46",
      "radius": "16px"
    },
    "fonts": [
      "https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Great+Vibes&display=swap"
    ]
  },

  "page": {
    "title": "Anna & Richard — Wedding Invitation"
  },

  "brand": {
    "logo": "assets/images/logo.png"
  },

  "hero": {
    "title": "Anna & Richard",
    "subtitle": "We invite you to join our wedding",
    "background": "assets/images/floral-bg-top.png"
  },

  "event": {
    "date": "Sunday, 25 June 2024",
    "time": "1:00 PM",
    "venue": "123 Anywhere St, Any City"
  },

  "cta": {
    "label": "RSVP",
    "href": "#rsvp"
  },

  "details": {
    "heading": "Wedding Details",
    "body": "One o’clock in the afternoon. Ceremony followed by reception."
  },

  "form": {
    "heading": "RSVP",
    "note": "Please respond by June 10.",
    "fields": [
      {
        "id": "full_name",
        "name": "full_name",
        "label": "Full Name",
        "type": "text",
        "placeholder": "Your name",
        "required": true,
        "fullWidth": true
      },
      {
        "id": "email",
        "name": "email",
        "label": "Email",
        "type": "email",
        "placeholder": "you@example.com",
        "required": true
      },
      {
        "id": "guests",
        "name": "guests",
        "label": "Guests",
        "type": "number",
        "placeholder": "1"
      },
      {
        "id": "message",
        "name": "message",
        "label": "Message",
        "type": "textarea",
        "placeholder": "Any notes for us?",
        "fullWidth": true
      }
    ],
    "submit": {
      "label": "Send RSVP"
    }
  },

  "footer": {
    "note": "Reception to follow"
  },

  "backgrounds": [
    {
      "selector": ".hero",
      "image": "assets/images/floral-bg-top.png",
      "size": "cover",
      "position": "center"
    },
    {
      "selector": ".card",
      "image": "assets/images/floral-bg-bottom.png",
      "size": "contain",
      "position": "bottom"
    }
  ],

  "animations": [
    {
      "selector": "[data-animate='hero']",
      "class": "animate-fade-in-up",
      "delayMs": 120
    },
    {
      "selector": "#cta",
      "class": "animate-pop",
      "delayMs": 260
    },
    {
      "selector": "[data-animate='form']",
      "class": "animate-fade-in-up",
      "delayMs": 180
    }
  ],

  "buttons": [
    {
      "selector": "#cta",
      "variant": "primary",
      "href": "#rsvp",
      "styles": {
        "fontSize": "16px",
        "padding": "14px 26px"
      }
    }
  ],

  "styles": {
    "hero_title": {
      "fontSize": "clamp(36px, 6vw, 64px)",
      "fontWeight": "600",
      "letterSpacing": "-0.01em"
    },
    "hero_subtitle": {
      "fontSize": "clamp(14px, 2.5vw, 18px)"
    },
    "event_date": {
      "fontWeight": "600"
    },
    "details_heading": {
      "fontSize": "clamp(18px, 3vw, 26px)",
      "marginBottom": "10px"
    }
  },

  "card": {
    "size": {
      "width": 1500,
      "height": 2100
    },
    "dpi": 300,
    "safePadding": 60,
    "bleed": 0,
    "backgroundColor": "#fff9f5",
    "transparentBackground": false,
    "export": {
      "scale": 2,
      "filename": "anna-richard-invitation.png"
    },
    "preview": {
      "fit": true,
      "zoom": 1
    }
  },

  "intro": {
    "enabled": true,
    "useOnce": true,
    "patternImage": "assets/images/envelope-pattern.png",
    "timing": {
      "flap": 800,
      "letter": 1200,
      "fade": 400,
      "holdAfter": 300
    }
  }
}
